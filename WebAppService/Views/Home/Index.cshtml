@section Scripts {
    <script>
        function scrollSlider(direction) {
            const slider = document.getElementById('slider');
            const scrollAmount = 320;
            slider.scrollBy({
                left: scrollAmount * direction,
                behavior: 'smooth'
            });
        }
         var swiper = new Swiper(".mySwiper1", {
          spaceBetween: 0,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          breakpoints: {
            0: {
              slidesPerView: 1.5,
               spaceBetween: 10,
            },
            768: {
              slidesPerView: 3,
            }
          }
        });
    </script>
    <script>
          var myClient = {
              init: function(){
                  myClient.LoadData();
              },
               LoadData: function () {
                  $.ajax({
                      url: '/Home/LoadData',
                      type: "GET",
                      dataType: "json",
                      success: function (data) {
                          if (data.status == true) {
                              var lstData = data.viewModel;
                              if(lstData.record != null)
                              {
                                  $('#_layout1').html(lstData.record.noiDung);
                              }
                              if(lstData.record2 != null)
                              {
                                  $('#_layout2').html(lstData.record2.noiDung);
                              }
                              if (lstData.listData != null) {
                                  var template = doT.template($("#news-template").html());
                                  $("#sp_sv").html(template({ newsList: lstData.listData }));
                              }

                               if (lstData.record3.length > 0) {
                                  var template = doT.template($("#news-templatem").html());
                                  $("#list_bai_viet0").html(template({ newsListm: lstData.record3 }));
                              }
                              if (lstData.record4.length > 0) {
                                  var template = doT.template($("#news-templatex").html());
                                  $("#original-articles").html(template({ newsListx: lstData.record4 }));
                              }
                               if (lstData.record5.length > 0) {
                                  var template = doT.template($("#news-templatevm").html());
                                  $("#list_bai_viet1").html(template({ newsListvm: lstData.record5 }));
                              }
                              if (lstData.record6.length > 0) {
                                  var template = doT.template($("#news-templatevx").html());
                                  $("#original-article1").html(template({ newsListvx: lstData.record6 }));
                              }
                          }
                      }
                  });
              },
        };
        
        $(document).ready(function () {
              myClient.init();
        });
    </script>
}
