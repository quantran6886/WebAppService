                    LoadData: async function () {
                        try {
                            var response = await axios.get('/api/get-data-home');
                            if (response.status) {
                                // ====== Xử lý listBaoChi ======
                                if (response.data.listBaoChi.length > 0) {
                                    var baiNoiBat = response.data.listBaoChi.find(item => item.isBaiVietNoiBat === true)
                                        || response.data.listBaoChi[0];

                                    var template1 = doT.template($("#news-templatem").html());
                                    $("#list_bai_viet0").html(template1({ newsListm: [baiNoiBat] }));

                                    var cacBaiConLai = response.data.listBaoChi.filter(item => item.idBaiViet !== baiNoiBat.idBaiViet);

                                    if (cacBaiConLai.length > 0) {
                                        var template2 = doT.template($("#news-templatex").html());
                                        $("#original-articles").html(template2({ newsListx: cacBaiConLai }));
                                    }
                                }
                                // ====== Xử lý listVideo ======
                                if (response.data.listVideo.length > 0) {
                                    var firstVideo = [response.data.listVideo[0]];
                                    var template1 = doT.template($("#news-templatevm").html());
                                    $("#list_bai_viet1").html(template1({ newsListvm: firstVideo }));
                                }

                                if (response.data.listVideo.length > 1) {
                                    var remainingVideos = response.data.listVideo.slice(1);
                                    var template2 = doT.template($("#news-templatevx").html());
                                    $("#original-article1").html(template2({ newsListvx: remainingVideos }));
                                }
                                // ====== Xử lý listHome (slider) ======
                                if (response.data.listHome.length > 0) {
                                    var data = response.data.listHome;
                                    // 1. Render HTML
                                    function renderSliderHTML(sliderClass, images) {
                                        var html = `<div class="animated-slider ${sliderClass}">`;
                                        images.forEach((item, index) => {
                                            var activeClass = index === 0 ? 'active' : '';
                                            html += `
                                                <div class="slide ${activeClass}">
                                                    <img src="${item.txtCard1 || '~/root/6388000.pngg'}" />
                                                    <div class="caption ${index === 0 ? 'zoom-in' : 'slide-left'}"></div>
                                                </div>
                                            `;
                                        });
                                        html += `</div>`;
                                        return html;
                                    }
                                    var mayTinh = data.filter(x => x.cbGiaoDien === "Máy tính");
                                    var mayTinhBang = data.filter(x => x.cbGiaoDien === "Máy tính bảng");
                                    var dienThoai = data.filter(x => x.cbGiaoDien === "Điện thoại");
                                    var htmlLayout = '';
                                    htmlLayout += renderSliderHTML('is-web', mayTinh);
                                    htmlLayout += renderSliderHTML('is-tablet', mayTinhBang);
                                    htmlLayout += renderSliderHTML('is-mobile', dienThoai);
                                    $('#_layout1').html(htmlLayout);
                                    // 2. Khởi tạo slider sau khi DOM đã gắn vào
                                    function initSlider(selector) {
                                        const slides = document.querySelectorAll(selector);
                                        if (!slides || slides.length === 0) {
                                            console.warn("Không tìm thấy slide:", selector);
                                            return;
                                        }

                                        let current = 0;

                                        function showSlide(index) {
                                            slides.forEach((slide) => {
                                                slide.classList.remove('active');
                                                const caption = slide.querySelector('.caption');
                                                if (caption) caption.style.opacity = 0;
                                            });

                                            const currentSlide = slides[index];
                                            currentSlide.classList.add('active');

                                            const caption = currentSlide.querySelector('.caption');
                                            if (caption && caption.classList.length > 1) {
                                                const animClass = caption.classList[1];
                                                caption.classList.remove(animClass);
                                                void caption.offsetWidth; // force reflow
                                                caption.classList.add(animClass);
                                                caption.style.opacity = 1;
                                            }
                                        }
                                        function nextSlide() {
                                            current = (current + 1) % slides.length;
                                            showSlide(current);
                                        }

                                        setInterval(nextSlide, 6000);
                                    }
                                    // 3. Gọi initSlider theo kích thước màn hình
                                    if (window.matchMedia("(min-width: 768px) and (max-width: 1023px)").matches) {
                                        initSlider('.is-tablet .slide');
                                    } else if (window.matchMedia("(min-width: 1024px)").matches) {
                                        initSlider('.is-web .slide');
                                    } else {
                                        initSlider('.is-mobile .slide');
                                    }
                                }
                            }
                        } catch (error) {
                            console.error("Lỗi khi gọi API:", error);
                        }
                    },
            };
        myClient.init();
    </script>
