        .filter {
            
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap; /* Cho responsive */
            padding: 10px;
            gap: 10px;
        }

            .filter h2 {
                margin: 0;
            }

        .filter-item {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background-color: #fff;
            padding: 8px 12px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
        }

            .filter-item select {
                border: none;
                font-size: 15px;
                outline: none;
                background: transparent;
            }

        .btn-search {
            margin-left: 10px;
            padding: 5px 10px;
            cursor: pointer;
        }

        .btn-search {
            padding: 10px 20px;
            font-size: 15px;
            background-color: #ff6600;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Doctors Grid */
        .doctors {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* Mỗi hàng 3 cột */
            gap: 25px;
            justify-items: center;
            margin-top:40px;
        }

        .doctor-card {
            background-color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            text-align: center;
            font-weight:500;
        }

            .doctor-card img {
                border-radius: 5px;
                margin-bottom: 15px;
            }

            .doctor-card h3 {
                margin: 0;
                color: #2F4848;
                font-size: 18px;
                font-weight: 700;
            }

            .doctor-card p {
                margin: 5px 0;
                color: #555;
            }

            .doctor-card i {
                margin-right: 6px;
            }

        .btn-detail {
            margin-top: 10px;
            background-color: #ff6600;
            color: white;
            border: none;
            padding: 8px 60px;
            border-radius: 8px;
            cursor: pointer;
        }
        .pagination {
  display: flex;
  gap: 8px;
  justify-content: center;
  align-items: center;
