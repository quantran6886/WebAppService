  border-radius: 8px;
  border: 1px solid #e0e0e0;
  background-color: white;
  color: #234A6B;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.page:hover {
  background-color: #e0f7fa;
}

.page.active {
  background-color: #00b7b7;
  color: white;
  border: none;
