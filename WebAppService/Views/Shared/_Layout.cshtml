    <script>
        function hideGoogleTranslateBar() {
            const frame = document.querySelector('iframe.goog-te-banner-frame');
            if (frame) {
                frame.style.display = 'none';
                document.body.style.top = '0px';
            }
        }

        // Đợi Google Translate load xong rồi ẩn
        window.addEventListener('load', function () {
            setTimeout(hideGoogleTranslateBar, 1000); // Delay 1 giây
        });
    </script>
    <script type="text/javascript">
        window.onload = function () {
            const menuIcon = document.getElementById("menuToggle");
            const logoWrapper = document.getElementById("menuMDesk");
            const logoImage = document.getElementById("logoImage");
            if (menuIcon && logoWrapper && logoImage) {
            menuIcon.addEventListener("click", function () {
                this.classList.toggle("active");
                logoWrapper.classList.toggle("header-colored");

                const currentSrc = logoImage.getAttribute("src");
                const altSrc = logoImage.getAttribute("data-alt-src");

                logoImage.setAttribute("src", altSrc);
                logoImage.setAttribute("data-alt-src", currentSrc);
            });
            } else {
            console.warn("Không tìm thấy phần tử:", {
                menuIcon,
                logoWrapper,
                logoImage
            });
            }
        };
        function fcTranslate(lang) {
            document.cookie = `googtrans=/${lang}; path=/`;
            document.cookie = `googtrans=/${lang}; domain=${window.location.hostname}; path=/`;
              setTimeout(function () {
            location.reload();
        }, 300); // Cho cookie có thời gian ghi
        }
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'vi',
                includedLanguages: 'en,vi,ja,zh-CN,fr,de',
                layout: google.translate.TranslateElement.InlineLayout.SIMPLE
            }, 'google_translate_element');
            $("#:2.container").hide();
        }

    </script>
