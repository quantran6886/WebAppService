@{
    ViewData["Title"] = "FAQS";
    Layout = "~/Areas/Admin/Views/Shared/_ViewAdmin.cshtml";
}
<style>
    .select,
    #locale {
        width: 100%;
    }

    .like {
        margin-right: 10px;
    }
</style>
@section Scripts {
    <script src="~/ajax/webappservice.faqs.js?v=1.2"></script>
}

<div class="card-header">
    <h4 class="card-title">Câu hỏi thường gặp</h4>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-lg-6 d-flex align-items-stretch">
            <div class="card w-100 border position-relative overflow-hidden">
                <div class="card-body p-2 pt-0">
                    <table id="tableCauHoi"
                           data-toggle="table"
                           data-pagination="true"
                           data-page-size="10"
                           data-page-list="[5, 10, 15, all]"
                           data-search="true">
                        <thead>
                            <tr>
                                <th data-field="soThuTu" data-sortable="true">Thứ tự</th>
                                <th data-field="cauHoi" data-sortable="true">Câu hỏi</th>
                                <th data-field="cauTraLoi" data-sortable="true">Câu trả lời</th>
                                <th data-field="ghiChu" data-sortable="true">Ghi chú</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 p-0 d-flex align-items-stretch">
            <div class="card w-100 border position-relative overflow-hidden">
                <div class="card-body p-0">
                    <div class="form-group p-2">
                        <button type="button" id="btnReset" class="btn bg-secondary-subtle text-secondary btn-sm p-2">
                            <i class="ti ti-plus fs-2"></i> Tạo mới
                        </button>
                        <button type="button" id="btnSaveData" class="btn bg-info-subtle text-info btn-sm p-2">
                            <i class="ti ti-upload fs-2"></i> Cập nhập
                        </button>
                        <button type="button" id="btnRemoveData" class="btn bg-danger-subtle text-danger btn-sm p-2">
                            <i class="ti ti-trash fs-2"></i> Xóa
                        </button>
                    </div>
                    <div class="form-group p-3">
                        <input type="hidden" id="IdFaqs" />
                        <div class="mb-3">
                            <label class="form-label">Số thứ tự</label>
                            <input type="number" id="SoThuTu" class="form-control" placeholder="1,2,3...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Câu hỏi</label>
                            <input type="text" id="CauHoi" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Câu trả lời</label>
                            <textarea type="text" id="CauTraLoi" class="form-control" placeholder="Nhập câu trả lời ..." rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea type="text" id="GhiChu" class="form-control" placeholder="Nhập ghi chú nếu có ..." rows="5"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>