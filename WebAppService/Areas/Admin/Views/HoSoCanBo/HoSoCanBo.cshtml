@{
	ViewData["Title"] = "DanhMucHeThong";
	Layout = "~/Areas/Admin/Views/Shared/_ViewAdmin.cshtml";
}
@section Scripts {
}

<div class="col-lg-12 d-flex align-items-stretch">
	<nav aria-label="breadcrumb" class="mb-1 w-100">
		<ol class="breadcrumb border border-primary bg-secondary-subtle px-1 py-1 rounded">
			<li class="breadcrumb-item">
				<a href="javascript:void(0)" class="text-primary fs-3"><i class="ti ti-list"></i> Hồ sơ cán bộ</a>
			</li>
		</ol>
	</nav>
</div>

<div class="card-body">
	<div class="row">
		<div class="col-lg-12 d-flex align-items-stretch">
			<div class="card w-100 border position-relative overflow-hidden">
				<div class="card-header p-1">
					<div class="form-group">
						<button type="button" class="btn bg-secondary-subtle text-secondary btn-sm p-2" data-bs-toggle="modal" data-bs-target="#bsHoSoCanBo">
							<i class="ti ti-plus fs-2"></i> Tạo mới
						</button>
						<button type="button" class="btn bg-info-subtle text-info btn-sm p-2">
							<i class="ti ti-upload fs-2"></i> Cập nhập
						</button>
						<button type="button" class="btn bg-danger-subtle text-danger btn-sm p-2">
							<i class="ti ti-trash fs-2"></i> Xóa
						</button>
					</div>

				</div>
				<div class="card-body p-4">
					<table id="table"
						   data-toggle="table"
						   data-flat="true"
						   data-search="true"
						   data-url="">
						<thead>
							<tr>
								<th data-field="github.name" data-sortable="true">Name</th>
								<th data-field="github.count.stargazers" data-sortable="true">Stargazers</th>
								<th data-field="github.count.forks" data-sortable="true">Forks</th>
								<th data-field="github.description" data-sortable="true">Description</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="bsHoSoCanBo" tabindex="-1" aria-labelledby="bs-example-modal-lg" aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header d-flex align-items-center">
				<h4 class="modal-title" id="myLargeModalLabel">
					Hồ sơ cá nhân
				</h4>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-lg-3 d-flex align-items-stretch">
						<div class="card w-100 border position-relative overflow-hidden">
							<div class="card-body p-4">
								<h4 class="card-title mb-4">Ảnh đại diện</h4>
								<div class="text-center">
									<img src="" alt="modernize-img" class="img-fluid rounded-circle" width="120" height="120">
									<div class="d-flex align-items-center justify-content-center my-4 gap-6">
										<button class="btn btn-primary"><i class="ti ti-upload"></i> Tải lên</button>
										<button class="btn bg-danger-subtle text-danger"> Làm mới</button>
									</div>
									<p class="mb-0">Ảnh tải lên dạng JPG, GIF hoặc PNG.Dung lượng tối đa 800K</p>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-9 d-flex align-items-stretch">
						<div class="card w-100 border position-relative overflow-hidden">
							<div class="card-body p-4">
								<p class="card-subtitle mb-4">Thông tin cá nhân</p>
								<div class="form-group">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn bg-danger-subtle text-danger  waves-effect text-start" data-bs-dismiss="modal">
					Đóng
				</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
<!-- /.modal -->
