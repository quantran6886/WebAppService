
@{
    ViewData["Title"] = "TaiSanDauGia";
    Layout = "~/Areas/Admin/Views/Shared/_ViewAdmin.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <nav aria-label="breadcrumb" class="mb-1 w-100">
        <ol class="breadcrumb border border-primary bg-secondary-subtle px-1 py-1 rounded">
            <li class="breadcrumb-item">
                <a href="javascript:void(0)" class="text-primary fs-3"><i class="ti ti-list"></i> Tài sản đấu giá</a>
            </li>
        </ol>
    </nav>
</div>
<div class="card card-body">
    <div class="row">
        <div class="col-md-8 col-xl-9 text-end d-flex mt-3 mt-md-0">
            <div class="form-group">
                <button type="button" class="btn bg-secondary-subtle text-secondary btn-sm p-2" data-bs-toggle="modal" data-bs-target="#bsHoSoCanBo">
                    <i class="ti ti-plus fs-2"></i> Thêm mới tài sản
                </button>
                <button type="button" class="btn bg-info-subtle text-info btn-sm p-2">
                    <i class="ti ti-search fs-2"></i> Tim kiếm nâng cao
                </button>
            </div>
        </div>
        <div class="col-md-4 col-xl-3">
            <form class="position-relative">
                <input type="text" class="form-control product-search ps-5" id="input-search" placeholder="Mã tài sản...">
                <i class="ti ti-search position-absolute top-50 start-0 translate-middle-y fs-6 text-dark ms-3"></i>
            </form>
        </div>
    </div>
</div>

<div class="card card-body p-0">
    <table id="table"
           data-toggle="table"
           data-flat="true"
           data-search="false"
           data-url="">
        <thead>
            <tr>
                <th data-field="github.name" data-sortable="true">Mã tài sản</th>
                <th data-field="github.count.stargazers" data-sortable="true">Tên tài sản</th>
                <th data-field="github.count.forks" data-sortable="true">Giá khởi điểm</th>
                <th data-field="github.description" data-sortable="true">Thời gian bắt đầu</th>
                <th data-field="github.description" data-sortable="true">Thời gian kết thúc</th>
                <th data-field="github.description" data-sortable="true">Chức năng</th>
            </tr>
        </thead>
    </table>
</div>